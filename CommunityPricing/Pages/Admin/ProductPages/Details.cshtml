@page "{id:Guid?}"
@model CommunityPricing.Pages.Admin.ProductPages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductDescr1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductDescr1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductDescr2_Wt_Vol)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductDescr2_Wt_Vol)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.Wholesaler)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Wholesaler)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductCategory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductCategory.ProductCategoryID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Product.Offering)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>OfferingID</th>
                    <th>VendorID</th>
                    <th>ProductPricePerWeight</th>

                </tr>
                @foreach (var item in Model.Product.Offering)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfferingID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductPricePerWeight)
                    </td>
                </tr>
                }
            </table>
        </dd>



    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.ProductID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
