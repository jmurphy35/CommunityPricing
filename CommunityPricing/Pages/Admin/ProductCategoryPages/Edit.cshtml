@page "{id:int}"
@model CommunityPricing.Pages.Admin.ProductCategoryPages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>ProductCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductCategory.ProductCategoryID" />
            <input type="hidden" asp-for="ProductCategory.RowVersion" />

            <div class="form-group">
                <label asp-for="ProductCategory.ProductCategoryID" class="control-label"></label>
                <input asp-for="ProductCategory.ProductCategoryID" class="form-control" />
                <span asp-validation-for="ProductCategory.ProductCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory.Name" class="control-label"></label>
                <input asp-for="ProductCategory.Name" class="form-control" />
                <span asp-validation-for="ProductCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
